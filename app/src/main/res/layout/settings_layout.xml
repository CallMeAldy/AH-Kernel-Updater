<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="?android:attr/listPreferredItemPaddingStart">

    <TextView
        style="?android:attr/preferenceCategoryStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/BackgroundCheck"
        android:textStyle="bold" />

    <View
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/blue_marine_translucent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/switch_bkg_check"
            style="?android:attr/switchPreferenceStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:checked="true"
            android:text="@string/BackgroundCheck_"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <TextView
        style="?android:attr/preferenceLayoutChild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="@string/BackgroundCheckInterval" />

    <LinearLayout
        android:id="@+id/linear_bkg_check_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:descendantFocusability="beforeDescendants"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <TextView
            style="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/hours" />

        <TextView
            android:id="@+id/editText_autocheck_h"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/translucent_blue_circle"
            android:clickable="true"
            android:gravity="center"
            android:singleLine="true" />

        <TextView
            style="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="15dp"
            android:text="@string/minutes" />

        <TextView
            android:id="@+id/editText_autocheck_m"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/translucent_blue_circle"
            android:gravity="center"
            android:singleLine="true" />
    </LinearLayout>

    <TextView
        style="?android:attr/preferenceCategoryStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="@string/downloads"
        android:textStyle="bold" />

    <View
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/blue_marine_translucent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/checkbox_useAndDM"
            android:orientation="vertical">

            <TextView
                style="?android:attr/preferenceLayoutChild"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/useAndroidDM" />

            <TextView
                style="?android:attr/preferenceInformationStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="36dp"
                android:text="@string/androidDM_INFO" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/checkbox_useAndDM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:background="@color/blue_marine_translucent" />

    <LinearLayout
        android:id="@+id/btn_dlLoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/translucent_button"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            style="?android:attr/preferenceLayoutChild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/downloadLocation" />

        <TextView
            android:id="@+id/textView_dlLoc"
            style="?android:attr/preferenceInformationStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp" />
    </LinearLayout>

</LinearLayout>